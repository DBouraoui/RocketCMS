<footer class="bg-gray-100 text-gray-800 py-16 px-6 md:px-12">
    <div class="max-w-6xl mx-auto grid md:grid-cols-3 gap-10">
        <!-- Branding -->
        <div>
            <h3 class="text-2xl font-bold mb-4">{{ settings.title }}</h3>
            <p class="text-gray-700 text-sm">
                {{ settings.description }}
            </p>
        </div>

        <!-- Liens -->
        <div>
            <h4 class="text-lg font-semibold mb-4">Liens</h4>
            <ul class="space-y-2 text-gray-700 text-sm">
                {% for link in links %}
                    {% if link.isFooter %}
                <li><a href="{{ link.url }}" class="hover:text-gray-900 transition">{{ link.title }}</a></li>
                    {%  endif %}
                {% endfor %}
            </ul>
        </div>

        <!-- Contact -->
        <div>
            <h4 class="text-lg font-semibold mb-4">Contact</h4>
            <p class="text-gray-700 text-sm mb-2">{{settings.contactEmail}}</p>
            <p class="text-gray-700 text-sm mb-4">{{ settings.contactPhone }}</p>
            <div class="flex gap-4 mt-2">
                <a href="#" class="text-gray-700 hover:text-gray-900 transition">LinkedIn</a>
                <a href="#" class="text-gray-700 hover:text-gray-900 transition">Twitter</a>
                <a href="#" class="text-gray-700 hover:text-gray-900 transition">Facebook</a>
            </div>
        </div>
    </div>

    <div class="text-center text-gray-500 text-sm mt-12">
        &copy; {{ date|date('Y')}} {{ settings.title }}. Tous droits réservés.
    </div>
</footer>
