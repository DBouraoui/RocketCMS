<form method="post" action="{{ path('app_admin_opening_hours_delete', {'id': opening_hour.id}) }}"
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet horaire ?');"
      class="inline-block">

    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ opening_hour.id) }}">

    <button type="submit"
            class="px-4 py-2 text-sm rounded-lg bg-red-600 text-white hover:bg-red-700 transition font-medium">
        Supprimer
    </button>
</form>
