{% extends 'admin/base.html.twig' %}

{% block title %}Détail de l'horaire{% endblock %}

{% block body %}
    {% include 'admin/components/Header.html.twig' with {
        title: 'Détail de l’horaire d’ouverture',
        subtitle: 'Visualisez les informations enregistrées pour ce jour'
    } %}

    <div class="min-h-screen bg-white text-neutral-900 px-8 py-10">
        <div class="max-w-3xl mx-auto bg-neutral-50 shadow-sm border border-neutral-200 rounded-2xl p-8">
            <h2 class="text-xl font-semibold mb-6 border-b border-neutral-200 pb-3">
                {{ opening_hour.day }}
            </h2>

            <dl class="divide-y divide-neutral-200 text-sm">
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Ouverture matin</dt>
                    <dd>{{ opening_hour.openMorning ?: '-' }}</dd>
                </div>
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Fermeture matin</dt>
                    <dd>{{ opening_hour.closeMorning ?: '-' }}</dd>
                </div>
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Ouverture après-midi</dt>
                    <dd>{{ opening_hour.openAfternoon ?: '-' }}</dd>
                </div>
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Fermeture après-midi</dt>
                    <dd>{{ opening_hour.closeAfternoon ?: '-' }}</dd>
                </div>
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Fermé</dt>
                    <dd>
                        {% if opening_hour.isclosed %}
                            <span class="inline-block px-2 py-0.5 rounded bg-red-100 text-red-700 text-xs">Oui</span>
                        {% else %}
                            <span class="inline-block px-2 py-0.5 rounded bg-green-100 text-green-700 text-xs">Non</span>
                        {% endif %}
                    </dd>
                </div>
                <div class="py-3 grid grid-cols-2">
                    <dt class="font-medium text-neutral-600">Dernière mise à jour</dt>
                    <dd>{{ opening_hour.updatedAt ? opening_hour.updatedAt|date('d/m/Y H:i') : '-' }}</dd>
                </div>
            </dl>

            <div class="mt-8 flex items-center justify-between border-t border-neutral-200 pt-6">
                <a href="{{ path('app_admin_opening_hours_index') }}"
                   class="text-sm text-neutral-600 hover:text-neutral-900 transition">
                    ← Retour à la liste
                </a>

                <div class="flex items-center gap-4">
                    <a href="{{ path('app_admin_opening_hours_edit', {'id': opening_hour.id}) }}"
                       class="px-4 py-2 text-sm rounded-lg bg-neutral-900 text-white hover:bg-neutral-800 transition">
                        Modifier
                    </a>

                    {{ include('admin/opening_hours/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
