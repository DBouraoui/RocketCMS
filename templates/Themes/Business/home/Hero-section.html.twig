<section>
    <!-- Hero Section -->
    <div class="hero min-h-screen bg-gradient-to-br from-primary/10 via-base-100 to-secondary/10 relative overflow-hidden">
        <!-- Animated Background Elements -->
        <div class="absolute inset-0 overflow-hidden">
            <div class="absolute top-20 left-10 w-72 h-72 bg-primary/20 rounded-full blur-3xl animate-pulse"></div>
            <div class="absolute bottom-20 right-10 w-96 h-96 bg-secondary/20 rounded-full blur-3xl animate-pulse delay-1000"></div>
        </div>

        <div class="hero-content flex-col lg:flex-row-reverse gap-12 lg:gap-20 relative z-10 px-4 sm:px-6 lg:px-8 max-w-7xl mx-auto">
            <!-- Right Side - Image/Visual -->
            <div class="flex-1 w-full max-w-lg lg:max-w-2xl">
                <div class="relative">
                    <!-- Main Image Card -->
                    <div class="mockup-window border border-base-300 bg-base-100 shadow-2xl">
                        <div class="flex justify-center bg-gradient-to-br from-primary to-secondary p-8 lg:p-16">
                            <!-- Dashboard Illustration -->
                            <div class="w-full space-y-4">
                                <div class="bg-base-100/90 rounded-lg p-6 backdrop-blur-sm">
                                    <div class="flex items-center justify-between mb-4">
                                        <div class="h-3 w-32 bg-primary/30 rounded-full"></div>
                                        <div class="h-3 w-3 bg-success rounded-full"></div>
                                    </div>
                                    <div class="space-y-3">
                                        <div class="h-2 w-full bg-base-300 rounded-full"></div>
                                        <div class="h-2 w-5/6 bg-base-300 rounded-full"></div>
                                        <div class="h-2 w-4/6 bg-base-300 rounded-full"></div>
                                    </div>
                                </div>
                                <div class="grid grid-cols-3 gap-3">
                                    <div class="bg-base-100/90 rounded-lg p-4 backdrop-blur-sm">
                                        <div class="h-8 w-8 bg-primary/30 rounded-full mb-2"></div>
                                        <div class="h-2 w-full bg-base-300 rounded-full"></div>
                                    </div>
                                    <div class="bg-base-100/90 rounded-lg p-4 backdrop-blur-sm">
                                        <div class="h-8 w-8 bg-secondary/30 rounded-full mb-2"></div>
                                        <div class="h-2 w-full bg-base-300 rounded-full"></div>
                                    </div>
                                    <div class="bg-base-100/90 rounded-lg p-4 backdrop-blur-sm">
                                        <div class="h-8 w-8 bg-accent/30 rounded-full mb-2"></div>
                                        <div class="h-2 w-full bg-base-300 rounded-full"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Floating Stats Cards -->
                    <div class="absolute -bottom-6 -left-6 bg-base-100 rounded-2xl shadow-xl p-4 border border-base-300 hidden sm:block">
                        <div class="flex items-center gap-3">
                            <div class="bg-success/20 text-success rounded-full p-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-success">+127%</p>
                                <p class="text-xs text-base-content/70">Croissance</p>
                            </div>
                        </div>
                    </div>

                    <div class="absolute -top-6 -right-6 bg-base-100 rounded-2xl shadow-xl p-4 border border-base-300 hidden lg:block">
                        <div class="flex items-center gap-3">
                            <div class="bg-primary/20 text-primary rounded-full p-3">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-2xl font-bold text-primary">10K+</p>
                                <p class="text-xs text-base-content/70">Utilisateurs</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Left Side - Content -->
            <div class="flex-1 text-center lg:text-left">
                <!-- Badge -->
                <div class="inline-flex items-center gap-2 bg-primary/10 text-primary px-4 py-2 rounded-full mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    <span class="text-sm font-semibold">Solution n°1 en France</span>
                </div>

                <!-- Main Heading -->
                <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6">
                    Transformez votre
                    <span class="text-transparent bg-clip-text bg-gradient-to-r from-primary to-secondary">
                    entreprise
                </span>
                    <br/>avec {{ setings.title|default('MyRocket') }}
                </h1>

                <!-- Subheading -->
                <p class="text-lg sm:text-xl text-base-content/70 mb-8 max-w-2xl">
                    La plateforme tout-en-un qui permet aux entreprises de se développer plus rapidement.
                    Gagnez du temps, augmentez votre productivité et boostez vos résultats.
                </p>

                <!-- CTA Buttons -->
                <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start mb-12">
                    <button class="btn btn-primary btn-lg gap-2 shadow-lg hover:shadow-xl transition-shadow">
                        Commencer gratuitement
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
                        </svg>
                    </button>
                    <button class="btn btn-outline btn-lg gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        Voir la démo
                    </button>
                </div>

                <!-- Social Proof -->
                <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-8 pt-8 border-t border-base-300">
                    <div class="flex items-center gap-2">
                        <div class="rating rating-sm">
                            <input type="radio" class="mask mask-star-2 bg-warning" checked />
                            <input type="radio" class="mask mask-star-2 bg-warning" checked />
                            <input type="radio" class="mask mask-star-2 bg-warning" checked />
                            <input type="radio" class="mask mask-star-2 bg-warning" checked />
                            <input type="radio" class="mask mask-star-2 bg-warning" checked />
                        </div>
                        <span class="text-sm font-semibold">5.0</span>
                    </div>
                    <div class="text-sm text-base-content/70">
                        <span class="font-semibold text-base-content">10 000+</span> entreprises nous font confiance
                    </div>
                </div>

                <!-- Trusted By Logos -->
                <div class="mt-12 hidden lg:block">
                    <p class="text-sm text-base-content/50 mb-4 uppercase tracking-wider">Ils nous font confiance</p>
                    <div class="flex items-center gap-8 opacity-50">
                        <div class="h-8 w-24 bg-base-content/20 rounded"></div>
                        <div class="h-8 w-24 bg-base-content/20 rounded"></div>
                        <div class="h-8 w-24 bg-base-content/20 rounded"></div>
                        <div class="h-8 w-24 bg-base-content/20 rounded"></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Scroll Indicator -->
        <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce hidden lg:block">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-base-content/50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
        </div>
    </div>
</section>
