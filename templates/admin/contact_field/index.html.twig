{% extends 'admin/base.html.twig' %}

{% block title %}Champs de contact{% endblock %}

{% block body %}
    {% include 'admin/components/Header.html.twig' with {
        title: 'Gestion du formulaire de contact',
        subtitle: 'Créez et modifiez les champs personnalisés de votre formulaire facilement.'
    } %}

    <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold text-base-content">Liste des champs</h2>
        <a href="{{ path('app_contact_field_new') }}" class="btn btn-primary btn-sm">
            + Nouveau champ
        </a>
    </div>

    <div class="overflow-x-auto bg-base-100 shadow-md rounded-xl border border-base-300">
        <table class="table w-full">
            <thead class="bg-base-200 text-base-content/70 uppercase text-sm">
            <tr>
                <th class="text-center w-12">#</th>
                <th>Nom interne</th>
                <th>Label</th>
                <th class="text-center">Obligatoire</th>
                <th>Options</th>
                <th class="text-center">Ordre</th>
                <th class="text-center">Type</th>
                <th class="text-right pr-6">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for contact_field in contact_fields %}
                <tr class="hover:bg-base-200/50 transition-colors">
                    <td class="text-center text-base-content/70">{{ contact_field.id }}</td>
                    <td class="font-medium">{{ contact_field.name }}</td>
                    <td>{{ contact_field.label }}</td>
                    <td class="text-center">
                        {% if contact_field.isRequired %}
                            <span class="badge badge-success badge-sm">Oui</span>
                        {% else %}
                            <span class="badge badge-ghost badge-sm">Non</span>
                        {% endif %}
                    </td>
                    <td>
                        {% if contact_field.options %}
                            <div class="text-xs text-base-content/70 truncate max-w-xs">
                                {{ contact_field.options|join(', ')|u.truncate(30, '...') }}
                            </div>
                        {% else %}
                            <span class="text-base-content/40 italic">Aucune</span>
                        {% endif %}
                    </td>
                    <td class="text-center text-base-content/70">
                        {{ contact_field.orderIndex ?? '-' }}
                    </td>
                    <td class="text-center">
                        <span class="badge badge-outline badge-sm">{{ contact_field.type.value }}</span>
                    </td>
                    <td class="text-right pr-6">
                        <div class="flex flex-row items-center justify-end gap-1">
                            <a href="{{ path('app_contact_field_show', {'id': contact_field.id}) }}" class="btn btn-xs btn-outline join-item">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-black">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M2.036 12.322a1.012 1.012 0 0 1 0-.639C3.423 7.51 7.36 4.5 12 4.5c4.638 0 8.573 3.007 9.963 7.178.07.207.07.431 0 .639C20.577 16.49 16.64 19.5 12 19.5c-4.638 0-8.573-3.007-9.963-7.178Z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                                </svg>
                                Voir
                            </a>
                            <a href="{{ path('app_contact_field_edit', {'id': contact_field.id}) }}" class="btn btn-xs btn-primary join-item">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-white">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125M18 14v4.75A2.25 2.25 0 0 1 15.75 21H5.25A2.25 2.25 0 0 1 3 18.75V8.25A2.25 2.25 0 0 1 5.25 6H10" />
                                </svg>
                                Editer
                            </a>

                            <form method="post" action="{{ path('app_contact_field_delete', {'id': contact_field.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ contact_field.id) }}">
                                <button class="btn btn-error btn-xs">
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-4 text-black">
                                        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                                    </svg>
                                    Supprimer
                                </button>
                            </form>

                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="8" class="text-center py-6 text-base-content/50 italic">
                        Aucun champ trouvé pour le moment.
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
