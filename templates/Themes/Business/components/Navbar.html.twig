<nav class="w-screen h-14 border-b border-gray-200 shadow-black shadow-xl px-2">
        <section class="w-full h-full flex items-center justify-between">
            <div>
                {% if settings.logo %}
                    <a href="{{ path('app_home_index') }}">
                        <img class="ml-4" src="{{ settings.logo }}" height="32" width="32" alt="{{ settings.title|default('Mon logo') }} Logo" />
                    </a>
                {% else %}
                <a href="{{ path('app_home_index') }}" class="font-bold text-md capitalize">{{ settings.title|default('Myrocket') }}</a>
                {% endif %}
            </div>
            <div class="flex flex-row items-center gap-4 -translate-x-12 max-md:hidden">
                {% for link in links %}
                    {%  if link.isNavbar and link.isActive%}
                <a class="hover:text-blue-500" href="{{ path(link.url) }}">{{ link.title }}</a>
                    {%  endif %}
                {% endfor %}
            </div>
            <div>
                <div class="md:hidden flex">
                    <div class="drawer">
                        <input id="my-drawer-1" type="checkbox" class="drawer-toggle" />
                        <div class="drawer-content">
                            <label for="my-drawer-1" class="btn btn-ghost drawer-button">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-6">
                                    <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5" />
                                </svg>
                            </label>
                        </div>
                        <div class="drawer-side">
                            <label for="my-drawer-1" aria-label="close sidebar" class="drawer-overlay"></label>

                            <ul class="menu bg-base-200 min-h-full w-80 p-4 flex flex-col justify-between">

                                <!-- Bloc context / info en haut -->
                                <li class="mb-6">
                                    <div class="p-4 text-center">
                                        {% if settings.logo %}
                                        <img class="ml-4" src="{{ settings.logo }}" height="32" width="32" alt="{{ settings.title|default('Mon logo') }} Logo" />
                                        {% else %}
                                        <h4 class="font-bold text-lg mb-2">{{ settings.title|default('') }}</h4>
                                        {% endif %}
                                    </div>
                                </li>

                                <!-- Liens dynamiques -->
                                <div class="flex-grow">
                                    {% for link in links %}
                                        <li>
                                            <a class="hover:text-blue-500" href="{{ path(link.url) }}">{{ link.title }}</a>
                                        </li>
                                    {% endfor %}
                                </div>

                                <li class="mt-6">
                                    <div class="text-sm text-gray-500">
                                        {{ settings.contactEmail|default('') }}<br>
                                       {{ settings.contactPhone|default('') }}
                                    </div>
                                </li>
                            </ul>
                        </div>

                    </div>
                </div>
                <div>
                    {#  desktop#}
                </div>
            </div>
        </section>
</nav>
