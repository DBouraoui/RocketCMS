                    <!-- Product Links -->
                    <div>
                        <h3 class="font-bold text-lg mb-6">Produit</h3>
                        <ul class="space-y-3">
                            <li>
                                <a href="#" class="link link-hover text-base-content/70 hover:text-primary transition-colors">Fonctionnalités</a>
