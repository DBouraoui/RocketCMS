<section id="portfolio" class="bg-neutral-950 text-neutral-100 py-24 px-6 md:px-12 relative overflow-hidden">
    <div class="max-w-6xl mx-auto text-center mb-12">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
      <span class="text-transparent bg-clip-text bg-gradient-to-r from-yellow-400 to-yellow-200">
        Nos créations
      </span>
        </h2>
        <p class="text-neutral-400">
            Une sélection de projets qui illustrent notre savoir-faire et notre exigence esthétique.
        </p>
    </div>

    <!-- Carousel -->
    <div class="relative max-w-5xl mx-auto">
        <div id="carousel" class="overflow-hidden rounded-3xl shadow-2xl relative">
            <div class="flex transition-transform duration-700 ease-in-out" id="carousel-inner">
                <img src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?auto=format&fit=crop&w=1200&q=80" class="w-full object-cover" alt="Création 2">
                <img src="https://images.unsplash.com/photo-1481277542470-605612bd2d61?auto=format&fit=crop&w=1200&q=80" class="w-full object-cover" alt="Création 3">
                <img src="https://plus.unsplash.com/premium_photo-1680831748191-d726a2f7b201?ixlib=rb-4.1.0&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&q=80&w=2532" class="w-full object-cover" alt="Création 3">
                <img src="https://images.unsplash.com/photo-1526170375885-4d8ecf77b99f?auto=format&fit=crop&w=1200&q=80" class="w-full object-cover" alt="Création 2">
            </div>
        </div>

        <!-- Boutons -->
        <div class="flex justify-center mt-8 gap-3">
            <button class="w-3 h-3 bg-yellow-400 rounded-full opacity-70 hover:opacity-100 transition" data-slide="0"></button>
            <button class="w-3 h-3 bg-yellow-400/40 rounded-full hover:opacity-100 transition" data-slide="1"></button>
            <button class="w-3 h-3 bg-yellow-400/40 rounded-full hover:opacity-100 transition" data-slide="2"></button>
            <button class="w-3 h-3 bg-yellow-400/40 rounded-full hover:opacity-100 transition" data-slide="3"></button>
        </div>
    </div>

    <script>
        const slides = document.querySelectorAll('#carousel-inner img');
        const buttons = document.querySelectorAll('[data-slide]');
        let current = 0;

        function showSlide(index) {
            const offset = -index * 100;
            document.getElementById('carousel-inner').style.transform = `translateX(${offset}%)`;
            buttons.forEach((btn, i) => btn.classList.toggle('bg-yellow-400', i === index));
            buttons.forEach((btn, i) => btn.classList.toggle('bg-yellow-400/40', i !== index));
            current = index;
        }

        buttons.forEach((btn, index) => {
            btn.addEventListener('click', () => showSlide(index));
        });

        // Auto défilement
        setInterval(() => {
            current = (current + 1) % slides.length;
            showSlide(current);
        }, 5000);
    </script>
</section>
