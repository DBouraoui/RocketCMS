{% extends 'admin/base.html.twig' %}

{% block title %}Mes pages{% endblock %}

{% block body %}

    {% include'admin/components/Header.html.twig' with {
        title: 'Modifications des pages',
        subtitle: 'Modification des pages avec aperçu en temps réel'
    } %}

    <div class="flex flex-col lg:flex-row gap-4 min-h-[600px]" data-controller="page-preview">
        <!-- Panel gauche : Liste des pages -->
        <div class="w-full lg:w-1/2 flex flex-col min-h-[500px] lg:min-h-0">
            <div class="bg-base-100 shadow-lg rounded-xl border border-base-300 flex-1 flex flex-col overflow-hidden">
                <!-- Header du panel -->
                <div class="bg-gradient-to-r from-primary to-secondary p-4 text-primary-content">
                    <h2 class="text-lg font-bold flex items-center gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        Liste des pages
                    </h2>
                    <p class="text-sm opacity-90 mt-1">{{ pages|length }} page(s) disponible(s)</p>
                </div>

                <!-- Tableau scrollable -->
                <div class="overflow-y-auto flex-1">
                    <table class="table table-zebra w-full table-pin-rows">
                        <thead class="bg-base-200 text-base-content/80 uppercase text-xs sticky top-0 z-10">
                        <tr>
                            <th class="w-12">#</th>
                            <th>Page</th>
                            <th class="text-center">Menu Nav</th>
                            <th class="text-center">Footer</th>
                            <th class="text-center">État</th>
                            <th class="text-right">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for page in pages %}
                            <tr class="hover cursor-pointer"
                                data-action="click->page-preview#updatePreview"
                                data-page-preview-url-param="{{ page.url ? path(page.url) : path('app_home_index') }}"
                                data-page-preview-title-param="{{ page.title|default('Sans titre') }}">
                                <td class="font-mono text-xs text-base-content/60">{{ page.id }}</td>
                                <td>
                                    <div class="flex flex-col">
                                        <span class="font-semibold text-base-content">{{ page.title|default('Sans titre') }}</span>
                                        <span class="text-xs text-base-content/60">{{ page.slug|default('no-slug') }}</span>
                                    </div>
                                </td>
                                <td class="text-center" onclick="event.stopPropagation()">
                                    {% include 'admin/pages/_update_navbar_menu.html.twig' with { menuLink: page } %}
                                </td>
                                <td class="text-center" onclick="event.stopPropagation()">
                                    {% include 'admin/pages/_update_footer_menu.html.twig' with { menuLink: page } %}
                                </td>
                                <td class="text-center">
                                    {% if page.isActive %}
                                        <span class="badge badge-success badge-sm">Actif</span>
                                    {% else %}
                                        <span class="badge badge-error badge-sm">Inactif</span>
                                    {% endif %}
                                </td>
                                <td class="text-right" onclick="event.stopPropagation()">
                                    <div class="flex gap-1 justify-end">
                                        <!-- Toggle Status -->
                                        <form method="post" action="{{ path('app_admin_page_toggle', { id: page.id }) }}"
                                              class="inline"
                                              onsubmit="return confirm('Confirmer le changement de statut ?')">
                                            <input type="hidden" name="_token" value="{{ csrf_token('toggle-page-' ~ page.id) }}">
                                            <div class="tooltip" data-tip="{{ page.isActive ? 'Désactiver' : 'Activer' }}">
                                                <button type="submit" class="btn btn-xs btn-circle btn-ghost">
                                                    {% if page.isActive %}
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-warning" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                                                        </svg>
                                                    {% else %}
                                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-success" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                                        </svg>
                                                    {% endif %}
                                                </button>
                                            </div>
                                        </form>

                                        <!-- Edit Button -->
                                        {% if page.slug not in ['connexion'] %}
                                            <div class="tooltip" data-tip="Éditer le contenu">
                                                <a href="{{ path('admin_page_content_editor_index', {id: page.id}) }}"
                                                   class="btn btn-xs btn-circle btn-primary">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L10.582 16.07a4.5 4.5 0 0 1-1.897 1.13L6 18l.8-2.685a4.5 4.5 0 0 1 1.13-1.897l8.932-8.931Zm0 0L19.5 7.125" />
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}

                                        <!-- View Button -->
                                        {% if page.url %}
                                            <div class="tooltip" data-tip="Ouvrir dans un nouvel onglet">
                                                <a href="{{ path(page.url) }}"
                                                   target="_blank"
                                                   class="btn btn-xs btn-circle btn-ghost">
                                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                                    </svg>
                                                </a>
                                            </div>
                                        {% endif %}
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="6" class="text-center py-12">
                                    <div class="flex flex-col items-center gap-3 text-base-content/50">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                                        </svg>
                                        <p class="font-semibold">Aucune page disponible</p>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>

                <!-- Footer avec stats -->
                <div class="bg-base-200 p-3 flex justify-between items-center text-xs border-t border-base-300">
                    <div class="flex gap-4">
                        <span class="flex items-center gap-1">
                            <span class="w-2 h-2 bg-success rounded-full"></span>
                            {{ pages|filter(p => p.isActive)|length }} actives
                        </span>
                        <span class="flex items-center gap-1">
                            <span class="w-2 h-2 bg-error rounded-full"></span>
                            {{ pages|filter(p => not p.isActive)|length }} inactives
                        </span>
                    </div>
                    <span class="text-base-content/60">Total : {{ pages|length }}</span>
                </div>
            </div>
        </div>

        <!-- Panneau droit : Aperçu en direct -->
        <div class="w-full lg:w-1/2 flex flex-col min-h-[600px]">
            <div class="bg-base-100 shadow-lg rounded-xl border border-base-300 flex flex-col flex-1 overflow-hidden">

                <!-- Header de l'aperçu -->
                <div class="bg-base-200 p-4 border-b border-base-300 flex items-center justify-between">
                    <div class="flex items-center gap-3">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                        </svg>
                        <div>
                            <h2 class="font-bold text-base-content" data-page-preview-target="title">Aperçu en direct</h2>
                            <p class="text-xs text-base-content/60">Cliquez sur une page pour prévisualiser</p>
                        </div>
                    </div>
                    <button data-action="click->page-preview#refresh" class="btn btn-sm btn-ghost gap-2">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15" />
                        </svg>
                        <span class="hidden sm:inline">Rafraîchir</span>
                    </button>
                </div>

                <!-- Iframe d'aperçu -->
                <div class="flex-1 relative flex flex-col">
                    <!-- Overlay de chargement -->
                    <div data-page-preview-target="loading"
                         class="absolute inset-0 bg-base-100/90 flex items-center justify-center z-10 hidden">
                        <div class="text-center">
                            <span class="loading loading-spinner loading-lg text-primary"></span>
                            <p class="mt-3 text-sm font-semibold text-base-content">Chargement...</p>
                        </div>
                    </div>

                    <!-- Iframe -->
                    <iframe
                        data-page-preview-target="iframe"
                        data-action="load->page-preview#hideLoading"
                        src="{{ path('app_home_index') }}"
                        class="flex-1 w-full border-0 bg-white">
                    </iframe>
                </div>

            </div>
        </div>
    </div>
        {% endblock %}
